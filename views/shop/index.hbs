<center>
    <h1>Welcome to {{title}}</h1>
    <p>Welcome to {{title}}</p>
</center>
<br> 

{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <p></p>
            <img src="{{ this.imagePath }}" alt="{{ this.imagePath }}">
            <div class="caption">
                <center>
                    <h3>{{ this.title }}</h3>
                </center>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">
                        <p></p>{{ this.price }} bath.-</div>
                    <a href="#" class="btn btn-success pull-right" role="button">Add to Basket</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

<br><br><br>
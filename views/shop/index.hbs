<center id="myDIV">
    <h1>{{title}}</h1>
    <p>Welcome to the Web shopping</p>
</center>
<br> {{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <p></p>
            <img src="{{ this.imagePath }}" alt="{{ this.imagePath }}">
            <div class="caption">
                <center>
                    <h3>{{ this.title }}</h3>
                </center>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">
                        <p></p>{{ this.price }} bath.-</div>
                    <a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to Basket</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}
<nav aria-label="..." class="qty">
    <ul class="pagination pagination-sm">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <br>
        <center>
            <h1>Sign In</h1>
        </center>
        <br> {{#if hasErrors}}
        <div class="alert alert-danger">
            {{# each messages }}
            <p>{{ this }}</p>
            {{/each}}
        </div>
        {{/if}}
        <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control" autofocus placeholder="example@gmail.com">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" maxlength="8" placeholder="EXample@#_123">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <br>
            <center>
                <button type="submit" class="form-control btn btn-primary">
                    <i class="fa fa-sign-in" aria-hidden="true"></i> Sign In</button>
            </center>
            <br>
        </form>
        <center><p>Don't have an account? <a href="/user/signup">Sign Up instead!</a></p></center>
            
            <br>
            <br>
    </div>
</div>